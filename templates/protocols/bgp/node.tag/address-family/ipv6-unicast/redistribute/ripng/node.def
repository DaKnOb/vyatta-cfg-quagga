help: Set to redistribute RIPng routes into BGP

delete: touch /tmp/bgp-redist-rip.$PPID

end: vyatta-vtysh -c "configure terminal"          \
                  -c "router bgp $VAR(../../../../@)" \
                  -c "address-family ipv6"         \
                  -c "no redistribute ripng"; 
     if [ -f "/tmp/bgp-redist-rip.$PPID" ]; then 
       rm -rf /tmp/bgp-redist-rip.$PPID; 
     else 
       if [ -n "$VAR(./metric/@)" ]; then 
         cond="metric $VAR(./metric/@)";
       fi; 
       if [ -n "$VAR(./route-map/@)" ]; then 
         cond="$cond route-map $VAR(./route-map/@)"; 
       fi; 
       vyatta-vtysh -c "configure terminal"          \
                    -c "router bgp $VAR(../../../../@)" \
                    -c "address-family ipv6"         \
                    -c "redistribute ripng $cond"; 
     fi;
