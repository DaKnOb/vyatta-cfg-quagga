help: Set to redistribute OSPFv3 routes into BGP

delete: touch /tmp/bgp-redist-ospf.$PPID

end: vyatta-vtysh -c "configure terminal"          \
                  -c "router bgp $VAR(../../../../@)" \
                  -c "address-family ipv6"         \
                  -c "no redistribute ospf6"; 
     if [ -f "/tmp/bgp-redist-ospf.$PPID" ]; then 
       rm -rf /tmp/bgp-redist-ospf.$PPID; 
     else 
       if [ -n "$VAR(./metric/@)" ]; then 
         cond="metric $VAR(./metric/@)";
       fi; 
       if [ -n "$VAR(./route-map/@)" ]; then 
         cond="$cond route-map $VAR(./route-map/@)"; 
       fi; 
       vyatta-vtysh -c "configure terminal"          \
                    -c "router bgp $VAR(../../../../@)" \
                    -c "address-family ipv6"         \
                    -c "redistribute ospf6 $cond"; 
     fi; 
