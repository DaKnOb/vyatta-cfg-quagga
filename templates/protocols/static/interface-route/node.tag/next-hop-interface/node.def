tag:
type: txt
help: "Configure the next-hop interface"
syntax: exec " \
        if [ -z \"`ip addr | grep $(@) `\" ]; then \
          echo ethernet interface $(@) doesn\\'t exist on this system ; \
          exit 1 ; \
        fi ; "
delete: "touch /tmp/static.\\$PPID"
end: "if [ -f \"/tmp/static.\\$PPID\" ]; then \
         /usr/bin/vtysh -c \"configure terminal\" -c \"no ip route $(../@) $(@)\" ; \
         rm /tmp/static.\\$PPID; \
      else \
         if [ -n \"$(./metric/@)\" ]; then \
	    MET=\"$(./metric/@)\"; \
         fi; \	       
         /usr/bin/vtysh -c \"configure terminal\" -c \"ip route $(../@) $(@) \\$MET \" ; \
      fi; "

